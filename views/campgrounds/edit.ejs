<% include ../partials/header %>

    <div class="container">

        
            <h2 class="text-center">Edit Campground</h2>
            
                <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <label for="campName">Camp Name</label>
                        <div class="input-group input-group-lg">
                                <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                            <input type="text" value="<%= camp.name %>" name="campground[name]" class="form-control" id="campName">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="campImage">Image url</label>
                        <div class="input-group input-group-lg">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-picture"></span></span>
                            <input type="text" value="<%= camp.image %>" name="campground[image]" class="form-control" id="campImage">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="campPrice">Price</label>
                        <div class="input-group input-group-lg">
                            <span class="input-group-addon">$</span>
                            <input type="number" value="<%= camp.price %>" name="campground[price]" class="form-control" id="campPrice" min="0.01" step="0.01">
                        </div>

                    </div>
                    <div class="form-group">
                        <label for="campDescription">Description</label>
                        <input type="text" value="<%= camp.description %>" name="campground[description]" class="form-control input-lg" id="campDescription">
                    </div>
                    
                        <button class="btn btn-success btn-block btn-lg">Edit Campground</button>
                        <a href="/campgrounds/<%=camp._id %>" class="btn btn-danger btn-lg btn-block" >Cancel</a>
                    
                </form>
           
        
        
    </div>

    <% include ../partials/footer %>