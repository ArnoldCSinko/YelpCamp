<% include ../partials/header %>

<div class="container">
    
        <div class="container">
            <h2 class="text-center">Edit comment for <%= camp.name %> </h2>
            <form action="/campgrounds/<%= camp._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="text">Comment</label>
                    <input  type="text" value="<%= comment.text %>" name="comment[text]" class="form-control input-lg" id="text">
                </div>
                
                    <button class="btn btn-success btn-block btn-lg">Edit Comment</button>
                    <a href="/campgrounds/<%= camp._id %>" class="btn btn-danger btn-block btn-lg">Cancel</a>
                      
            </form>    
        </div>    
    
    
</div>

<% include ../partials/footer %>

